doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registration Page
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(style='background-image: url("/Images/background.jpg"); background-size: cover;')
    header(class="bg-gradient-to-r from-blue-900 to-black text-white text-center py-4")
      h1(class="text-3xl font-bold") Registration Page
    main(class="max-w-md mx-auto mt-16 bg-white bg-opacity-70 p-6 rounded-lg shadow-lg")
      form(id="register-form", action="/register", method="POST")
        div(class="mb-4")
          label(for="email" class="block text-gray-700 text-sm font-semibold mb-2") Email:
          input(type="email" id="email" name="email" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
        div(class="mb-4")
          label(for="password" class="block text-gray-700 text-sm font-semibold mb-2") Password:
          input(type="password" id="password" name="password" required minlength="6" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
        div(class="mb-4")
          label(for="confirm_password" class="block text-gray-700 text-sm font-semibold mb-2") Confirm Password:
          input(type="password" id="confirm_password" name="confirm_password" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
          span(id="password-error" class="text-red-600 hidden text-center") Passwords do not match
        if message
          div(id="alert-message" class="alert alert-danger text-center text-red-600")= message  
        div(class="flex items-center justify-center")
          button(type="submit" class="bg-gradient-to-r from-blue-900 to-black hover:from-black hover:to-blue-900 text-white font-bold py-2 px-5 rounded focus:outline-none focus:shadow-outline") Register
      div.text-center.mt-4
        a(href="/" class="text-black hover:underline font-semibold") Go to Home Page
    footer(class="text-center text-gray-500 text-xs mt-4")
      p
        | © 2024 Registration Page. All rights reserved.

  script.
    document.getElementById('register-form').addEventListener('submit', function(event) {
      const password = document.getElementById('password').value;
      const confirm_password = document.getElementById('confirm_password').value;
      
      if (password !== confirm_password) {
        event.preventDefault(); // Prevent form submission
        document.getElementById('password-error').classList.remove('hidden');
      }
    });









