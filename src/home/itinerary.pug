doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    title Generated Itinerary
    style.
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #000;
        color: #fff;
        font-family: Arial, sans-serif;
      }
      .container {
        position: relative;
        background-color: #111;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        max-width: 800px;
        width: 100%;
        height:auto;
        
      }
      .button {
        display: block;
        width: 100%;
        padding: 0.75rem;
        text-align: center;
        background-color: #333;
        color: #fff;
        border-radius: 0.25rem;
        text-decoration: none;
        margin-top: 1rem;
      }
      .button:hover {
        background-color: #444;
      }
      h2, h3 {
        margin-top: 1rem;
        font-weight: bold;
      }
      ul {
        list-style-type: disc;
        padding-left: 1.5rem;
      }
      li {
        margin-bottom: 0.5rem;
      }
  body
    .container
      h1.text-3xl.font-bold.mb-4.text-center Your Travel Itinerary
      .itinerary-content
        != itinerary
      form(method="POST" action="/itinerary/send-itinerary")
        button(type="submit" class="button") Send Itinerary to Email
      a.button(href='/aitravelplanner') Plan Another Trip
